{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "declaration": true,
        "declarationMap": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
